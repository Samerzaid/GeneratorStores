@page "/Account/ForgotPasswordConfirmation"

<PageTitle>Forgot password confirmation</PageTitle>

<div class="d-flex flex-column justify-content-center align-items-center min-vh-100 bg-light px-3">
    <div class="card shadow p-4 rounded-4 text-center" style="max-width: 450px; width: 100%;">
        <div class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-envelope-check text-success mb-3" viewBox="0 0 16 16">
