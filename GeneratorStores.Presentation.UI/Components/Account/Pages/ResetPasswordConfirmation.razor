@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset Password Confirmation</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center min-vh-100 bg-light px-3">
    <div class="card shadow p-4 rounded-4" style="max-width: 500px; width: 100%;">
        <div class="text-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-shield-lock text-success mb-3" viewBox="0 0 16 16">
                <path d="M5.5 9a1.5 1.5 0 1 1 3 0v1h-3V9z"/>
                <path d="M0 5c0-1.105.672-2.333 1.75-3.191C2.821.843 4.307.5 6 .5s3.179.343 4.25 1.309C11.328 2.667 12 3.895 12 5v3.5c0 2.667-1.24 4.903-3.25 6.25a1.494 1.494 0 0 1-1.5 0C3.24 13.403 2 11.167 2 8.5V5z"/>
            </svg>
            <h2 class="fw-bold">Password Reset</h2>
            <p class="text-muted mb-0">Your password has been successfully reset.</p>
        </div>

        <div class="text-center mt-4">
            <a href="/Account/Login" class="btn btn-primary w-100 rounded-pill py-2 fs-5">
                Log In
            </a>
        </div>
    </div>
</div>